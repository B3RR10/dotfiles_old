.phony: all install links services rust vim

all: install links services rust vim

install:
	@echo "------------------------------------------------------------"
	@echo "------------------ Installing packages... ------------------"
	@echo "------------------------------------------------------------"
	@sh make_scripts/make_install_packages

links:
	@echo "------------------------------------------------------------"
	@echo "------------------- Creating symlinks... -------------------"
	@echo "------------------------------------------------------------"
	@stow --no-folding -R *.stow

services:
	@echo "------------------------------------------------------------"
	@echo "------------------ Activating services... ------------------"
	@echo "------------------------------------------------------------"
	@sh make_scripts/make_services

rust:
	@echo "------------------------------------------------------------"
	@echo "------------------- Configuring Rust... --------------------"
	@echo "------------------------------------------------------------"
	@sh make_scripts/make_rust

vim:
	@echo "------------------------------------------------------------"
	@echo "------------------- Configuring Vim... ---------------------"
	@echo "------------------------------------------------------------"
	@sh make_scripts/make_vim
