########################
#  Account berrio.dev  #
########################
account dev
host smtp.mailbox.org
port 465
protocol smtp
auth on
user mail@berrio.dev
from mail@berrio.dev
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/isync/berrio.dev.gpg"
