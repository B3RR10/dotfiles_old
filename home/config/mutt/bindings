# some sane vim-like keybindings
bind index k previous-entry
bind index j next-entry
bind pager k previous-page
bind pager j next-page

bind index,pager g noop
bind pager gg top
bind index gg first-entry
bind pager G bottom
bind index G last-entry

bind index,pager \Cu half-up
bind index,pager \Cd half-down

# index and pager shortcuts
bind index,pager @ compose-to-sender
bind index,pager R group-reply
bind index D purge-message
macro pager D '<purge-message><exit>'
bind index <tab> sync-mailbox
bind index <space> collapse-thread
# Save all attachments
macro index,pager S "<pipe-message>ripmime -i - -d ~/Downloads && rm ~/Downloads/textfile*" "Save all non-text attachments using ripmime"
# opening urls with urlscan
macro pager F "<pipe-message>urlscan<enter>" "call urlscan to extract URLs out of a message"
# Sync all email
macro index,pager O "<shell-escape>mbsync -c $HOME/.config/isync/mbsyncrc -a<enter>" "run mbsync to sync all mail"

# Mark all as read
macro index <esc>a "<tag-pattern>~N<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" "mark all as read"

# View attachments properly.
bind attach <return> view-mailcap

# Drafts
bind compose P postpone-message
bind index p recall-message

# finding stuff
bind editor <tab> complete-query
# macro index \cf "<change-folder-readonly>~/.mu/results<enter>" "mu find results"

# PGP Binds
bind index \Ck mail-key
bind pager \Ck extract-keys
macro compose \Ck "<attach-key>0x827963BBA9FDFA72<enter>"
