#Change these for your Gmail:

set imap_user        = "miguelberrio91@gmail.com"
set smtp_url         = "smtp://miguelberrio91@smtp.gmail.com:587/"
set realname         = "Miguel Berrio"
set from             = "Miguel Berrio <miguelberrio91@gmail.com>"

#What's below will be pretty much the same for any Gmail account:

set folder           = "imaps://imap.gmail.com:993"
set spoolfile        = "+INBOX"
set record           = /dev/null
set postponed        = "+[Gmail]/Drafts"
set header_cache     = ~/.config/mutt/gmail/cache/headers
set message_cachedir = ~/.config/mutt/gmail/cache/bodies
set certificate_file = ~/.config/mutt/gmail/certificates
set ssl_starttls     = yes
set ssl_force_tls    = yes
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=Archived<enter>" "Go to all mail"
macro index gs "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to sent mail"
macro index gt "<change-folder>=[Gmail]/Trash<enter>" "Go to trash"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index gj "<change-folder>=Junk<enter>" "Go to junk"
macro index,pager A "<save-message>=Archived<enter>" "Archive Message"

#For passwords, if you want login automatic:
set smtp_pass        = $my_gmail_pass
set imap_pass        = $my_gmail_pass
