all: install links rust vim

install:
	@echo "--------------------------------------------------------------------------"
	@echo "------------------------- Installing packages... -------------------------"
	@echo "--------------------------------------------------------------------------"
	sh .make_scripts/make_install_packages
	@echo "--------------------------------------------------------------------------"
	@echo "------------------------ Installing packages done ------------------------"
	@echo "--------------------------------------------------------------------------"

links:
	@echo "------------------------------------------------------------------------"
	@echo "------------------------- Creating Symlinks... -------------------------"
	@echo "------------------------------------------------------------------------"
	sh .make_scripts/make_symlinks
	@echo "------------------------------------------------------------------------"
	@echo "------------------------ Creating Symlinks done ------------------------"
	@echo "------------------------------------------------------------------------"

rust:
	@echo "-----------------------------------------------------------------------"
	@echo "------------------------- Configuring Rust... -------------------------"
	@echo "-----------------------------------------------------------------------"
	sh .make_scripts/make_rust
	@echo "-----------------------------------------------------------------------"
	@echo "------------------------ Configuring Rust done ------------------------"
	@echo "-----------------------------------------------------------------------"

vim:
	@echo "----------------------------------------------------------------------"
	@echo "------------------------- Configuring Vim... -------------------------"
	@echo "----------------------------------------------------------------------"
	sh .make_scripts/make_vim
	@echo "----------------------------------------------------------------------"
	@echo "------------------------ Configuring Vim done ------------------------"
	@echo "----------------------------------------------------------------------"
